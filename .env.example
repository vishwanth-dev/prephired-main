# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=prepAI
NODE_ENV=development

# Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017/prepai
MONGODB_DB_NAME=prepai

# Authentication
NEXTAUTH_SECRET=your-nextauth-secret-key-here-change-in-production
NEXTAUTH_URL=http://localhost:3000
JWT_SECRET=your-jwt-secret-key-here

# AI Services (for voice interviews & resume processing)
OPENAI_API_KEY=your-openai-key-here
OPENAI_MODEL=gpt-4

# Voice Providers
MURF_API_KEY=your-murf-key-here
ELEVENLABS_API_KEY=your-elevenlabs-key-here
PLAYHT_API_KEY=your-playht-key-here
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=your-azure-region-here

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@prepai.com
FROM_NAME=prepAI

# Real-time (Pusher for live interview updates)
NEXT_PUBLIC_PUSHER_KEY=your-pusher-key-here
PUSHER_APP_ID=your-pusher-app-id
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=us2

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Multi-tenancy
DEFAULT_TENANT_PLAN=free
MAX_INTERVIEWS_FREE=5
MAX_CANDIDATES_FREE=10

# Widget Configuration
NEXT_PUBLIC_WIDGET_CDN_URL=http://localhost:3000/widget
WIDGET_ALLOWED_ORIGINS=*
